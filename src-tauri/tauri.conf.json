{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Claudia",
  "version": "0.2.4",
  "identifier": "com.jasonbates.claudia",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Claudia",
        "width": 800,
        "height": 600,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "backgroundColor": "#002b36",
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "cli": {
      "description": "Claudia - Claude Terminal Interface",
      "args": [
        {
          "name": "directory",
          "index": 1,
          "takesValue": true,
          "required": false
        }
      ]
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFDMUU2MTVCRDk3NTUyMUUKUldRZVVuWFpXMkVlSERVUnBwQTBZWUk0T0FuVk9JQ1RkOHptb0VrRkVoSXVpeXZnRW5VZ0JPNWsK",
      "endpoints": [
        "https://github.com/JasonBates/claudia/releases/latest/download/latest.json"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../sdk-bridge-v2.mjs"
    ],
    "macOS": {
      "signingIdentity": "-"
    }
  }
}